<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="119dp"
        android:layout_height="52dp"
        android:background="@drawable/custom_b"
        android:text="@string/button"
        android:textColor="@color/btn_custom_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41000003" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="102dp"
        android:layout_height="66dp"
        android:textOff="Off"
        android:textOn="On"
        android:thumb="@drawable/custom_switch_thumb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31"
        app:showText="true"
        app:track="@drawable/custom_switch_track" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_radio_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_radio_bg_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/satu"
            android:textColor="@color/custom_radio_text_color" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_radio_bg_selector_middle"
            android:button="@null"
            android:gravity="center"
            android:text="@string/dua"
            android:textColor="@color/custom_radio_text_color" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_radio_bg_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/tiga"
            android:textColor="@color/custom_radio_text_color" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>